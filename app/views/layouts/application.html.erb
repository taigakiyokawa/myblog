<!DOCTYPE html>
<html>
  <head>
    <title>魁!!漢飯</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %></p>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %></p>
  </head>

  <body>
    <div class="container">
      <nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="user_menu">
      <% if ore_user_signed_in? %>
        <%= link_to image_tag(current_ore_user.OreImage.url, :size =>'70x70'), root_path %>
        <p><%= link_to '編集', edit_ore_user_registration_path %></p>
        <p><%= link_to '破門', destroy_ore_user_session_path, method: :delete %></p>
      <% else %>
        <p><%= link_to '入門', new_ore_user_registration_path %></p>
        <p><%= link_to '見参', new_ore_user_session_path %></p>
        <% end %>
      </div>
      </nav>
      <h1><%= link_to image_tag('/assets/header.png', class: 'logo'), root_path %></h1>
    <%= yield %>
    </div>
  </body>
</html>
